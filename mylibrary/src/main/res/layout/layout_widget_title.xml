<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlyt_title"
    style="@style/titleView">

    <ImageView
        android:id="@+id/ivBack"
        style="@style/titleViewBack"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/titleViewText" />

    <ImageView
        android:id="@+id/ivMore"
        style="@style/titleViewRightImage"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/ivMoreSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ivMore"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="center" />


    <TextView
        android:id="@+id/tvMore"
        style="@style/titleViewRightImageText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray33" />
</RelativeLayout>

