<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 标题栏文字 -->
    <style name="titleViewText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/gray33</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>


    <style name="titleViewRightImageText">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/titleViewText</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 顶部标题栏 -->
    <style name="titleView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 标题栏返回按键 -->
    <style name="titleViewBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/ic_back</item>
    </style>

</resources>